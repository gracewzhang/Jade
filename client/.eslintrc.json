{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "standard-with-typescript"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.json"],
    "react": "999.99.99"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "semi": [1, "always"],
    "quotes": [2, "single"],
    "no-unused-vars": 1,
    "multiline-ternary": 0,
    "@typescript-eslint/no-unused-vars": 1,
    "@typescript-eslint/semi": "off",
    "@typescript-eslint/member-delimiter-style": [
      "error",
      {
        "singleline": {
          "delimiter": "semi",
          "requireLast": true
        }
      }
    ]
  }
}
